<div class="container pt-2">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h1>New Bookmark</h1>
        <%= simple_form_for [@list, @bookmark] do |f| %>
          <%= f.input :comment %>
          <%= f.association :movie %>
          <%= f.submit %>
        <% end %>
        <%= link_to "All Lists", lists_path(@lists)%>
        </div>
    </div>
  </div>
</div>
